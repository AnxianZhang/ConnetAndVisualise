{% extends 'base.html.twig' %}

{% block title %}Hello AddContactController!{% endblock %}

{% block stylesheets %}
<link href="{{ asset('css/form.css') }}" rel="stylesheet" />

{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<nav>
    <ul class="nav nav-tabs justify-content-center">
        <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{ path('show_contact') }}">My contacts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('app_add_contact') }}">Add Contact</a>
        </li>
        {# <li class="nav-item">
            <a class="nav-link" href="">Contact us</a>
        </li>#}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('log_out') }}">Log out</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Sponsorized by Symfony</a>
        </li>
        {#<li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li>#}
    </ul>
</nav>

<div class="example-wrapper">
    <h3>add your contact</h3>
    {{ form_start(form) }}
    {{ form_row(form.firstName) }}
    {{ form_row(form.lastName) }}
    {{ form_row(form.email) }}

    {% if incorrect is defined %}
    <p style="color: #DC356F; margin-top: 1em;">{{ incorrect }}</p>
    {% endif %}

    <div id="form-button">
        {{ form_widget(form.send) }}
    </div>
    {{ form_end(form) }}

</div>
{% endblock %}