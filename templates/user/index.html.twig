{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block stylesheets %}
<link href="{{ asset('css/form.css') }}" rel="stylesheet" />
<link href="{{ asset('css/ident.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}


<div class="example-wrapper">
    <h3> Formulaire d'authentification </h3>
    {{ form_start(form) }}
    {{ form_label(form.name) }}
    {{ form_widget(form.name) }}
    {{ form_errors(form.name) }}

    {{ form_label(form.pwd) }}
    {{ form_widget(form.pwd) }}
    {{ form_errors(form.pwd) }}

    {% if incorrect is defined %}
    <p style="color: #DC356F; margin-top: 1em;">{{ incorrect }}</p>
    {% endif%}

    <div id="form-button">
        {{ form_widget(form.send) }}
        <a href="{{ path('redirecte_insc') }}" class="btn btn-secondary">S'inscrire</a>
    </div>
    {{ form_end(form) }}

</div>
{% endblock %}